---
import Mail from '../components/icons/Mail.astro';
import Socialmedia from '../components/Socialmedia.astro';
import Linkedin from '../components/icons/Linkedin.astro';
import LanguageSelector from './LanguageSelector.astro';
import Github from './icons/Github.astro';
---

<h3 class="lg:text-2xl md:text-2xl text-xl font-semibold
dark:text-yellow-200 text-red-900/90 mb-2 mt-2">
    Email
</h3>
<h4 class="flex flex-wrap md:gap-x-6 gap-y-2 lg:text-lg md:text-lg text-base font-medium
                    text-teal-800 dark:text-stone-300 mt-2 mb-2">
        <LanguageSelector 
            esp="¿Quieres contactar conmigo? ¡Escríbeme!"
            eng="Want to get in touch? Write me!"
            cat="Vols contactar amb mi? Escriu-me!"
        />
        
        <Socialmedia href="mailto:tomasantonayagodoy@gmail.com">
            <Mail class="size-4 md:size-5.5"/>
            tomasantonayagodoy@gmail.com
        </Socialmedia>
                    
</h4>

<h3 class="lg:text-2xl md:text-2xl text-xl font-semibold
dark:text-yellow-200 text-red-900/90 mb-2 mt-6">
    LinkedIn
</h3>
<h4 class="flex flex-wrap md:gap-x-6 gap-y-2 lg:text-lg md:text-lg text-base font-medium
                    text-teal-800 dark:text-stone-300 mt-2 mb-2">
    <LanguageSelector 
        esp="Consulta mi perfil de Linkedin para más información"
        eng="Check my LinkedIn profile for more information"
        cat="Consulta el meu perfil de Linkedin per a més informació"
    />
        
        <Socialmedia href="https://www.linkedin.com/in/antonayagodoy/">
            <Linkedin class="size-4 md:size-5.5"/>
            LinkedIn
        </Socialmedia>
                    
</h4>

<h3 class="lg:text-2xl md:text-2xl text-xl font-semibold
dark:text-yellow-200 text-red-900/90 mb-2 mt-6">
    GitHub
</h3>
<h4 class="flex flex-wrap md:gap-x-6 gap-y-2 lg:text-lg md:text-lg text-base font-medium
                    text-teal-800 dark:text-stone-300 mt-2 mb-2">
    <LanguageSelector 
        esp="Puedes ver mis proyectos en GitHub"
        eng="You can see my projects on GitHub"
        cat="Pots veure els meus projectes en GitHub"
    />
        
        <Socialmedia href="https://github.com/Godoy2121">
            <Github class="size-4 md:size-5.5"/>
            GitHub
        </Github>
                    
</h4>